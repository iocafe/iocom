{
  "name": "candy",
  "persistent":
  {
    "title": "camera parameters",
    "groups": [
      {
        "name": "camera_param",
        "parameters": [
          {"name": "cam_nr", "type": "char", "init":1},
          {"name": "img_width", "type": "short", "init":640},
          {"name": "img_height", "type": "short", "init":480},
          {"name": "framerate", "type": "short", "init":30},
          {"name": "brightness", "type": "char", "init":50},
          {"name": "saturation", "type": "char", "init":50}
        ]
      },
      {
        "name": "device_param",
        "parameters": [
          {"name": "hlight_blink", "type": "ushort", "init":40},
          {"name": "hlight_lvl", "type": "ushort", "init":0}
        ]
      }
    ]
  },

 "volatile":
  {
    "title": "device control",
    "groups": [
      {
        "name": "device_control",
        "parameters": [
          {"name": "pwm1", "type": "float", "min": -90, "max": 90},
          {"name": "pwm2", "type": "float", "min": -100, "max": 100},
          {"name": "pwm3", "type": "float", "max": 4095},
          {"name": "pwm4", "type": "float", "min": 0, "max": 100},
          {"name": "on", "type": "boolean", "init":1}
        ]
      }
    ]
  }
}

