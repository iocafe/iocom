{
  "name": "buster",
  "persistent":
  {
    "title": "camera parameters",
    "groups": [
      {
        "name": "camera parameters",
        "parameters": [
          {"name": "cam_nr", "type": "char", "init":1},
          {"name": "img_width", "type": "short", "init":640},
          {"name": "img_height", "type": "short", "init":480},
          {"name": "framerate", "type": "short", "init":30},
          {"name": "brightness", "type": "char", "init":50},
          {"name": "saturation", "type": "char", "init":50}
        ]
      },
      {
        "name": "device parameters",
        "parameters": [
          {"name": "hlight_blink", "type": "ushort", "init":40},
          {"name": "hlight_lvl", "type": "ushort", "init":0}
        ]
      }
    ]
  },

 "volatile":
  {
    "title": "device control",
    "groups": [
      {
        "name": "device control",
        "parameters": [
          {"name": "left_wheel", "type": "ushort", "max": 4095},
          {"name": "right_wheel", "type": "ushort", "max": 4095},
          {"name": "left_motor", "type": "ushort", "max": 4095},
          {"name": "right_motor", "type": "ushort", "max": 4095},
          {"name": "left_dir", "type": "boolean"},
          {"name": "right_dir", "type": "boolean"},
          {"name": "electr_power", "type": "boolean"},
          {"name": "motor_power", "type": "boolean"},
          {"name": "led_morse", "type": "boolean"},
          {"name": "laser", "type": "boolean"},
          {"name": "on", "type": "boolean", "init":1}
        ]
      }
    ]
  }
}

